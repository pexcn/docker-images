{
    "locals": [
        {
            "local_address": "127.0.0.1",
            "local_port": 1234,
            "protocol": "redir",
            "tcp_redir": "tproxy",
            "udp_redir": "tproxy"
        },
        {
            "local_address": "127.0.0.1",
            "local_port": 5300,
            "protocol": "tunnel",
            "forward_address": "8.8.8.8",
            "forward_port": 53
        }
    ],

    "servers": [
        {
            "server": "11.22.33.44",
            "server_port": 1776,
            "password": "${SHADOWSOCKS_PASSWORD_1}",
            "method": "2022-blake3-aes-128-gcm"
        },
        {
            "server": "11.22.33.44",
            "server_port": 1984,
            "password": "${SHADOWSOCKS_PASSWORD_2}",
            "method": "2022-blake3-chacha8-poly1305"
        },
        {
            "server": "11.22.33.44",
            "server_port": 443,
            "password": "${SHADOWSOCKS_PASSWORD_3}",
            "method": "chacha20-ietf-poly1305",
            "plugin": "xray-plugin",
            "plugin_opts": "tls;fast-open;mode=grpc;host=example.com;loglevel=none"
        }
    ],

    "mode": "tcp_and_udp",
    "timeout": 3600,
    "udp_timeout": 300,
    "keep_alive": 300,
    "nofile": 1048576,
    "no_delay": true,
    "fast_open": true,

    "balancer": {
        "max_server_rtt": 5,
        "check_interval": 30,
        "check_best_interval": 15
    }
}
